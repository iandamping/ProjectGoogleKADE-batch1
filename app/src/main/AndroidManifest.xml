<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.junemon.kotlinnetworking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".feature.mainscreen.MainScreen"
            android:parentActivityName=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" />
        <activity android:name="com.example.junemon.kotlinnetworking.feature.lastmatch.detail.DetailLastMatchActivity" />
        <activity android:name="com.example.junemon.kotlinnetworking.feature.nextmatch.detail.DetailNextMatchActivity" />
        <activity android:name=".feature.favorites.matches.detail.FavDetailActivity" />
        <activity android:name=".feature.team.detail.TeamDetail" />
        <activity android:name=".feature.team.detail.player.detail.PlayerActivity"/>
        <activity android:name=".feature.favorites.team.detail.FavTeamDetailActivity"/>
    </application>

</manifest>